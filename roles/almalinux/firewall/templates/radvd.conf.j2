# radvd configuration generated by Ansible
# Advertises IPv6 prefix on the LAN interface

interface {{ firewall_lan_interface }}
{
    AdvSendAdvert on;
    MaxRtrAdvInterval 30;
    AdvManagedFlag off;        # SLAAC (no DHCPv6 stateful)
    AdvOtherConfigFlag off;    # Set to on if you provide other info via DHCPv6

    prefix {{ firewall_ipv6_lan_prefix }}
    {
        AdvOnLink on;
        AdvAutonomous on;      # Allow hosts to auto-configure addresses
        AdvRouterAddr on;
    };

    RDNSS 2001:4860:4860::8888 2001:4860:4860::8844 {};
};
