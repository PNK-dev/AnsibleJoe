# Configuraci√≥n DHCPv6 para Proyecto SO
default-lease-time {{ dhcpv6_lease_time | default('3600') }};
max-lease-time 7200;

subnet6 {{ ipv6_prefix | default('2001:db8:1::/120') }} {
    range6 {{ dhcpv6_range_start | default('2001:db8:1::100') }} {{ dhcpv6_range_end | default('2001:db8:1::200') }};
    option dhcp6.name-servers {{ ipv6_prefix | default('2001:db8:1::1') | regex_replace('/120', '') }};
    option dhcp6.domain-search "{{ network_domain | default('proyecto-so.local') }}";
}